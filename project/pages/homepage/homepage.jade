if devMode
	- var pageTitle = 'Homepage'
else
	- var pageTitle = '{{ entry.title }}'
	
extends ../_default.jade

block body

	include ../../components/hero/hero.jade

	h1 #{pageTitle}

	| {{ entry.body }}

	ul
		if devMode
			for item in ['test', 'test2']
				li
					a(href='#{item}') #{item}
		else
			| {% for entry in craft.entries.section('news').limit(5).find() %}
			li
				a(href='{{ entry.url }}') {{ entry.title }}
			| {% endfor %}